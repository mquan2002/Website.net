<div id="modalContainer"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function removeFromCart(productId, sizeId, crustId) {
        if (!confirm("Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?")) return;

        $.ajax({
            url: '/Cart/RemoveFromCart',
            type: 'POST',
            data: { productId: productId, sizeId: sizeId, crustId: crustId },
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    refreshCartIcon();
                    // Reload lại trang giỏ hàng
                    location.reload();
                } else {
                    alert("Không thể xóa sản phẩm. Vui lòng thử lại.");
                }
            },
            error: function () {
                alert("Có lỗi xảy ra khi xóa sản phẩm.");
            }
        });
    }

    function showEditModal(productId, sizeId, crustId) {
        $.ajax({
            url: '/Cart/ShowEditCartItemModal',
            type: 'GET',
            data: { productId: productId, sizeId: sizeId, crustId: crustId },
            success: function (result) {
                $('#modalContainer').html(result);
                $('#editCartModal').modal('show');
            },
            error: function () {
                alert('Không thể tải thông tin sản phẩm.');
            }
        });
    }

    function updateCartItem() {
        var form = $('#editCartItemForm');
        $.ajax({
            url: '/Cart/UpdateCartItem',
            type: 'POST',
            data: form.serialize(),
            success: function (response) {
                if (response.success) {
                    $('#editCartModal').modal('hide');
                    refreshCartIcon();
                    location.reload(); // Tải lại trang
                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi cập nhật sản phẩm.');
            }
        });
    }

    function refreshCartIcon() {
        $.ajax({
            url: '/Cart/RefreshCartIcon',
            type: 'GET',
            success: function (html) {
                $('.header__cart').html(html);
            },
            error: function () {
                console.error('Không thể làm mới icon giỏ hàng.');
            }
        });
    }

   


</script>