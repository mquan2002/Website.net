@model Final.net.Models.User


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang đăng nhập</title>
    <link rel="stylesheet" href="../LayoutDomino/css/signin.css" type="text/css">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300,0,0" />
</head>

<body>
    <div class="login-card-container">
        <div class="form-container">
            <div class="login-card-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="../LayoutDomino/img/domino_logo.png" style="width: 190px; cursor: pointer;"
                        onclick="window.location.href='index.html' ">
                </a>
            </div>
            <div class="login-card-header">
                <p style="font-weight:bold; font-size: 22px;">Đăng nhập</p>
            </div>
            <form id="login" method="post" asp-action="SignIn">
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">person</span>
                    <input type="text" placeholder="User name" id="Username" name="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" placeholder="Password" id="Password" name="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-item-other">
                    <div class="checkbox">
                        <input type="checkbox" id="rememberMeCheckbox">
                        <label for="rememberMeCheckbox">Remember Me</label>
                    </div>
                    <a onclick="forgotPW()" style="cursor: pointer;">Forgot password |</a>
                </div>
                <button class="btn" type="submit">Sign In</button>
            </form>

            <div class="login-card-footer">
                <p style="font-size: 13px; margin: 10px;">Bạn chưa có tài khoản?</p>
                </br>
                <a href="/Sign/SignUp">
                    <p style="font-size: 13px; color: black;">Đăng ký ngay!</p>
                </a>
            </div>
        </div>
    </div>
</body>

</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
