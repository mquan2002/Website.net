@model Final.net.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang đăng ký</title>
    <link rel="stylesheet" href="../LayoutDomino/css/signup.css" type="text/css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300,0,0" />
</head>

<body>
    <div class="register-card-container">
        <div class="form-container">
            <div class="register-card-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="../LayoutDomino/img/domino_logo.png" style="width: 190px; cursor: pointer;">
                </a>
            </div>
            <div class="register-card-header">
                <p style="font-size: 22px; font-weight: bold;">Đăng ký</p>
            </div>
            <form method="post" asp-action="SignUp" id="register">
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">person</span>
                    <input type="text" placeholder="User Name" id="Username" name="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" placeholder="Enter Password" id="Password" name="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" placeholder="Confirm Password" id="passwordConfirm" name="passwordConfirm">
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">pin_drop</span>
                    <input type="text" placeholder="Enter your address" id="Address" name="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="text" placeholder="Enter your email" id="Email" name="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">smartphone</span>
                    <input type="text" placeholder="Enter your phone number" id="Phone" name="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>

                </div>

                <button class="btn" type="submit">Sign Up</button>
                <p style="font-size: 14px; text-align: center; margin-bottom: 1px">Đã có tài khoản?</p>
            </form>

                <a asp-action="SignIn">
                    <p style="text-decoration: underline; font-size: 14px; text-align: center;">Đăng nhập</p>
                </a>
        </div>
    </div>

</body>

</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
