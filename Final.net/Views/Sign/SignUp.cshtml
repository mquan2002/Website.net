@model Final.net.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang đăng ký</title>
    <link rel="stylesheet" href="../LayoutDomino/css/signup.css" type="text/css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,300,0,0" />
</head>

<body>
    <div class="register-card-container">
        <div class="form-container">
            <div class="register-card-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="../LayoutDomino/img/domino_logo.png" style="width: 190px; cursor: pointer;">
                </a>
            </div>
            <div class="register-card-header">
                <p style="font-size: 22px; font-weight: bold;">Đăng ký</p>
            </div>
            <form method="post" asp-action="SignUp" id="register">
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">person</span>
                    <input type="text" placeholder="Tên người dùng" id="Username" name="Username">
                    <span asp-validation-for="Username" class="text-danger text__error "></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" placeholder="Nhập mật khẩu" id="Password" name="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" placeholder="Xác nhận mật khẩu" id="passwordConfirm" name="passwordConfirm">
                    @if (ViewData.ModelState["PasswordConfirm"] != null &&
                    ViewData.ModelState["PasswordConfirm"].Errors.Count > 0)
                    {
                        <span class="text-danger text__error">@ViewData.ModelState["PasswordConfirm"].Errors[0].ErrorMessage</span>
                    }
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">pin_drop</span>
                    <input type="text" placeholder="Nhập địa chỉ" id="Address" name="Address">
                    <span asp-validation-for="Address" class="text-danger text__error"></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="text" placeholder="Nhập email" id="Email" name="Email">
                    <span asp-validation-for="Email" class="text-danger text__error"></span>

                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">smartphone</span>
                    <input type="text" placeholder="Nhập số điện thoại" id="Phone" name="Phone">
                    <span asp-validation-for="Phone" class="text-danger text__error"></span>

                </div>

                <button class="btn" type="submit">Đăng ký</button>
                
            </form>

            <div class="register-card-footer">
                <p style="font-size: 14px; text-align: center; margin-bottom: 1px">Bạn đã có tài khoản?</p>
                </br> 
                <a asp-action="SignIn" style="text-decoration: none">
                    <p style="font-size: 14px; text-align: center; color: #000">Đăng nhập</p>
                </a>
            </div>
        </div>
    </div>

</body>

</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
