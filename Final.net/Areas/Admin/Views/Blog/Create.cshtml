@model Final.net.Models.Blogs

@{
    ViewData["Title"] = "Create Blog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<h1>Create Blog</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        @if (ViewData.ModelState.ContainsKey("Title") && ViewData.ModelState["Title"].Errors.Count > 0)
        {
            <div class="text-danger">@ViewData.ModelState["Title"].Errors[0].ErrorMessage</div>
        }
    </div>

    <div class="form-group">
        <label for="LinkURL">Link URL</label>
        <input type="url" class="form-control" id="LinkURL" name="LinkURL" value="@Model.LinkURL" required />
        @if (ViewData.ModelState.ContainsKey("LinkURL") && ViewData.ModelState["LinkURL"].Errors.Count > 0)
        {
            <div class="text-danger">@ViewData.ModelState["LinkURL"].Errors[0].ErrorMessage</div>
        }
    </div>

    <div class="form-group">
        <label for="ImageURL">Image URL</label>
        <input type="url" class="form-control" id="ImageURL" name="ImageURL" value="@Model.ImageURL" required />
        @if (ViewData.ModelState.ContainsKey("ImageURL") && ViewData.ModelState["ImageURL"].Errors.Count > 0)
        {
            <div class="text-danger">@ViewData.ModelState["ImageURL"].Errors[0].ErrorMessage</div>
        }
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="Active" name="Active" value="true" @(Model?.Active == true ? "checked" : "") />
        <label class="form-check-label" for="Active">Active</label>
    </div>



    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</form>


